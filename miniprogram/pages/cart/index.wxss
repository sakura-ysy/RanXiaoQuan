page {
    height: 100vh;
    width: 100vw;
    overflow: hidden;
    background-image: url("https://636c-cloud1-3gv71ub62b32f113-1312049560.tcb.qcloud.la/devImages/%E8%B5%84%E6%BA%90%20148%404x.png?sign=8f984ba5794b2ef3918a254b0d943f29&t=1656386891");
    background-size: 100%;
    background-repeat: no-repeat;
}

.title {
    z-index: 2;
    left: 50vw;
    transform: translate(-50%,0);
    top: 5vh;
    font-size: 60rpx;
    font-weight: 900;
    color: white;
    position:absolute;
}


.back {
    width: 3vw;
    position: fixed;
    top: 7.5vh;
    left: 7vw;
}

.cart {
    position: fixed;
    top: 13vh;
    height: 76vh;
    width: 100%;
}

.single_good {
    width: 90%;
    height: auto;
    margin-left: 5vw;
    border-radius: 30rpx;
    background-color: white;
    margin-bottom: 1vh;
}

.good_img {
    width: 25vw;
    margin-left: 3vw;
    margin-right: 3vw;
    margin-top: 1vh;
    margin-bottom: 1vh;
    display: inline-block;
}

.right_text {
    width: 40vw;
    margin-top: 1vh;
    margin-left: 2vw;
    display: inline-block;
    height: auto;
}

.good_title {
    font-size: 40rpx;
    font-weight: 600;
    width: 100%;
    height: 3vh;
    margin-bottom: 1vh;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;

}

.price {
    font-size: 32rpx;
    font-weight: 400;
    color: rgb(29,29,119);
    height: 2vh;
    width: 100%;
    margin-bottom: 7vw;
}

.bottom_one {
    height: auto;
    width: 100%;
    transform: translate(0,-30%);
}

.is_choose {
    width: 8vw;
    display: inline-block;
    transform: translate(0,10%);
}

.choose {
    font-size: 37rpx;
    font-weight: 500;
    display: inline-block;
    margin-right: 1vw;
}

.delete {
    font-size: 37rpx;
    font-weight: 500;
    display: inline-block;
    margin-left: 1vw;
}

.bottom_menu {
    position: absolute;
    top: 90vh;
    height: 10vh;
    width: 100%;
    background-color: white;
}

.choose_all {
    position: fixed;
    left: 8vw;
    bottom: 4vh;
    width: 10vw;
}

.choose_text {
    position: fixed;
    left: 20vw;
    bottom: 4vh;
    font-size: 40rpx;
    font-weight: 600;
    color: rgb(29,29,119);
}

.cancel_text {
    position: fixed;
    left: 35vw;
    bottom: 4vh;
    font-size: 40rpx;
    font-weight: 600;
    color: rgb(29,29,119);
}

.send {
    position: fixed;
    width: 35vw;
    right: 3vw;
    bottom: 1.5vh;
}