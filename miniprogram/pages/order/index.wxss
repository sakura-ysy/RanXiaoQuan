page {
    height: 100vh;
    width: 100vw;
    overflow: hidden;
    background-image: url("https://636c-cloud1-3gv71ub62b32f113-1312049560.tcb.qcloud.la/devImages/%E8%B5%84%E6%BA%90%20149%404x(1).png?sign=09100efa955127f335831f81df12917f&t=1656386549");
    background-size: 100%;
    background-repeat: no-repeat;
}

.back {
    width: 3vw;
    position: fixed;
    top: 7.5vh;
    left: 7vw;
}

.title {
    position: fixed;
    font-size: 60rpx;
    font-weight: 700;
    left: 50%;
    top: 5.3vh;
    color: rgb(19,19,76);
    transform: translate(-50%,0);
}

.all_view {
    top:13vh;
    width: 100%;
    height: 87vh;
    position: fixed;
}

.single_order {
    width: 90%;
    height: auto;
    margin-left: 5vw;
    margin-top: 1.5vh;
    background-color: rgb(30,30,120);
    border-radius: 30rpx;
    box-sizing: border-box;
    padding-left: 3vw;
    padding-top: 1.5vh;
}

.order_img {
    width: 20vw;
    height: 20vw;
    transform: translate(0,-24%);
    overflow: hidden;
    display: inline-block;
}

.order_in {
    width: 30vw;
    height: 25vw;
    overflow: hidden;
    display: inline-block;
    margin-left: 3vw;
}

.order_name {
    font-size: 40rpx;
    font-weight: 600;
    color: white;
    width: 30vw;
    overflow:hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
}


.order_state {
    font-size: 32rpx;
    font-weight: 500;
    color: rgb(150,150,150);
}

.order_price {
    font-size: 40rpx;
    margin-top: 1vh;
    font-weight: 600;
    color: skyblue;
}

.order_right {
    width: 30vw;
    height: 25vw;
    overflow: hidden;
    display: inline-block;
}

.right_text {
    font-size: 32rpx;
    font-weight: 600;
    color: white;
}

.phone {
    width: 100%;
    font-size: 32rpx;
    font-weight: 500;
    color: rgb(200,200,200);
}

.appeal {
    width: 20vw;
    margin-top: 0.8vh;
    margin-left: 10%;
}